---
import Sidebar from '../components/layout/Sidebar.astro';
import '../styles/global.css';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | PRS Studio Log</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono:wght@400&family=Lora:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="flex h-screen overflow-hidden">
    
    <!-- FIXED SIDEBAR (Left) -->
    <aside class="w-64 border-r border-zinc-200 flex-shrink-0 hidden md:block p-8">
      <Sidebar />
    </aside>

    <!-- SCROLLABLE CONTENT (Center) -->
    <main class="flex-1 overflow-y-auto scroll-smooth relative">
      <!-- Mobile Header (Visible only on small screens) -->
      <div class="md:hidden p-6 border-b border-zinc-200 flex justify-between items-center bg-[#FAFAF5] sticky top-0 z-50">
        <span class="font-bold tracking-tighter">PRS.STUDIO</span>
        <span class="text-xs font-mono text-zinc-400">MENU</span>
      </div>

      <div class="max-w-3xl mx-auto px-6 py-12 md:py-20 min-h-screen">
        <slot /> <!-- Content injects here -->
      </div>
    </main>

  </body>
</html>
