---
import LogbookLayout from '../layouts/LogbookLayout.astro';
import GalleryViewer from '../components/gallery/GalleryViewer.svelte';

const items = [
  { type: 'image', src: "/pics/11.jpg" },
  { type: 'image', src: "/pics/10.jpg" },
  { type: 'image', src: "/pics/09.jpg" },
  { type: 'video', src: "/videos/studio-tour.mp4", poster: "/pics/5.jpg" }, // Placeholder Video Entry
  { type: 'image', src: "/pics/08.jpg" },
  { type: 'image', src: "/pics/07.jpg" },
  { type: 'image', src: "/pics/06.jpg" },
  { type: 'image', src: "/pics/5.jpg" },
  { type: 'image', src: "/pics/4.jpg" },
  { type: 'image', src: "/pics/3.jpg" },
  { type: 'image', src: "/pics/2.png" },
  { type: 'image', src: "/pics/1.png" }
];
---

<LogbookLayout title="Gallery">
  
  <header class="mb-16 border-b border-zinc-200 dark:border-zinc-800 pb-8">
    <h1 class="font-sans text-4xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100 mb-4">
      Visual Archive
    </h1>
    <p class="font-serif text-lg text-zinc-600 dark:text-zinc-400 italic">
      Moments captured in the studio and beyond.
    </p>
  </header>

  <section class="mb-24">
    <GalleryViewer client:load items={items} />
  </section>

</LogbookLayout>