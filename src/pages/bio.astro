---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/bio/Hero.astro';
import Timeline from '../components/bio/Timeline.astro';
import Gallery from '../components/bio/Gallery.astro';
import Skills from '../components/bio/Skills.astro';
import Footer from '../components/home/Footer.astro';
import Modal from '../components/Modal.astro';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Autobiography | PR-Studios</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #5D5CDE;
            --secondary-color: #ff3b30;
            --dark-bg: #0a0a0a;
            --card-bg: #1a1a1a;
            --text-primary: #ffffff;
            --text-secondary: #a0a0a0;
            --border-color: #333;
            --glass-bg: rgba(255, 255, 255, 0.1);
            --shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            --gradient: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--dark-bg);
            color: var(--text-primary);
            line-height: 1.6;
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <Navbar />
    <Hero />
    <Timeline />
    <Gallery />
    <Skills />
    <Footer />
    <Modal />
</body>
</html>
