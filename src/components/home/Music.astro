    <!-- Enhanced Music Section -->
    <section id="music" class="section music-widgets">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Featured Music</h2>
                <p class="section-subtitle">Handpicked collections and trending tracks from our curated library</p>
            </div>
            
            <div class="widget-grid">
                <div class="music-widget">
                    <img src="pics/5.jpg" alt="Top Hits" class="widget-cover">
                    <div class="widget-content">
                        <h3>Top Hits</h3>
                        <p>The hottest tracks dominating the charts right now</p>
                        <div class="widget-controls">
                            <button class="play-btn" data-track="music/2.mp3">
                                <i class="fas fa-play"></i>
                            </button>
                            <div class="widget-info">
                                <span class="duration">3:45</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="music-widget">
                    <img src="pics/4.jpg" alt="Chill Vibes" class="widget-cover">
                    <div class="widget-content">
                        <h3>Chill Vibes</h3>
                        <p>Smooth and relaxing tunes for your peaceful moments</p>
                        <div class="widget-controls">
                            <button class="play-btn" data-track="music/1.mp3">
                                <i class="fas fa-play"></i>
                            </button>
                            <div class="widget-info">
                                <span class="duration">4:12</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="music-widget">
                    <img src="pics/2.png" alt="Workout Mix" class="widget-cover">
                    <div class="widget-content">
                        <h3>Workout Mix</h3>
                        <p>High-energy tracks to power through your fitness routine</p>
                        <div class="widget-controls">
                            <button class="play-btn" data-track="music/3.mp3">
                                <i class="fas fa-play"></i>
                            </button>
                            <div class="widget-info">
                                <span class="duration">3:28</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<style>
        /* Enhanced Music Widget */
        .music-widgets {
            background: var(--card-bg);
        }

        .widget-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .music-widget {
            background: var(--dark-bg);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .music-widget::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(93, 92, 222, 0.1), transparent);
            transition: left 0.6s;
        }

        .music-widget:hover::before {
            left: 100%;
        }

        .music-widget:hover {
            transform: translateY(-10px);
            border-color: var(--primary-color);
            box-shadow: var(--hover-glow);
        }

        .widget-cover {
            width: 100%;
            height: 250px;
            border-radius: 15px;
            object-fit: cover;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .music-widget:hover .widget-cover {
            transform: scale(1.05);
        }

        .widget-content h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .widget-content p {
            color: var(--text-secondary);
            margin-bottom: 1.5rem;
        }

        .widget-controls {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 1rem;
        }

        .play-btn {
            background: var(--gradient);
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        .play-btn:hover {
            transform: scale(1.1);
            box-shadow: var(--hover-glow);
        }

        .widget-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

                .duration {

                    color: var(--text-secondary);

                    font-size: 0.9rem;

                }

        

                @media (max-width: 768px) {

                    .widget-grid {

                        grid-template-columns: 1fr;

                    }

                }

        </style>