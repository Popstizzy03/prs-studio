<style>
        /* Main Content */
        .main-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem 8rem;
        }

        .section-header {
            font-size: 2rem;
            font-weight: 700;
            margin: 3rem 0 1.5rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-subtitle {
            color: var(--text-secondary);
            margin-bottom: 2rem;
            font-size: 1rem;
        }

        /* Enhanced Carousel */
        .carousel {
            display: flex;
            overflow-x: auto;
            gap: 1.5rem;
            padding: 1rem 0 2rem;
            scroll-snap-type: x mandatory;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .carousel::-webkit-scrollbar {
            display: none;
        }

        .carousel-item {
            flex: 0 0 auto;
            width: 180px;
            scroll-snap-align: start;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

        .carousel-item:hover {
            transform: translateY(-10px) scale(1.05);
        }

        .carousel-item img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

        .carousel-item:hover img {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        .carousel-item .title {
            margin-top: 0.75rem;
            font-weight: 600;
            font-size: 0.95rem;
            line-height: 1.3;
        }

        .carousel-item .subtitle {
            color: var(--text-secondary);
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .play-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.8);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .carousel-item:hover .play-overlay {
            opacity: 1;
        }

        .play-overlay i {
            color: white;
            font-size: 1.5rem;
            margin-left: 3px;
        }

        /* Explore Section */
        .explore-section {
            margin: 4rem 0;
            padding: 2rem;
            background: var(--card-bg);
            border-radius: 20px;
            border: 1px solid var(--border-color);
        }

        .explore-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 2rem;
        }

        .explore-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            background: var(--dark-bg);
            border-radius: 12px;
            text-decoration: none;
            color: var(--text-primary);
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
        }

        .explore-item:hover {
            transform: translateY(-3px);
            border-color: var(--primary-color);
            box-shadow: 0 5px 20px rgba(93, 92, 222, 0.2);
        }

        .explore-item i {
            color: var(--primary-color);
            font-size: 1.2rem;
        }

        /* Additional Enhancements */
        .genre-tags {
            display: flex;
            gap: 0.5rem;
            margin: 1rem 0;
            flex-wrap: wrap;
        }

        .genre-tag {
            background: var(--glass-bg);
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            border: 1px solid var(--border-color);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .genre-tag:hover,
        .genre-tag.active {
            background: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

        .equalizer {
            display: flex;
            align-items: flex-end;
            gap: 2px;
            height: 20px;
            margin-left: 0.5rem;
        }

        .eq-bar {
            width: 3px;
            background: var(--primary-color);
            border-radius: 1px;
            animation: equalizer 1s ease-in-out infinite;
        }

        .eq-bar:nth-child(1) { height: 8px; animation-delay: 0s; }
        .eq-bar:nth-child(2) { height: 12px; animation-delay: 0.1s; }
        .eq-bar:nth-child(3) { height: 6px; animation-delay: 0.2s; }
        .eq-bar:nth-child(4) { height: 14px; animation-delay: 0.3s; }
        .eq-bar:nth-child(5) { height: 10px; animation-delay: 0.4s; }

        @keyframes equalizer {
            0%, 100% { height: 4px; }
            50% { height: 16px; }
        }
</style>
